<head>
    <title>Your Forecast</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="Gerald's NodeJS Weather Application" />
    <meta property="og:image" content="./images/svg/weather.svg" />
    <script src="./js/jquery-3.3.1.js"></script>
    <script src="./js/jquery.dataTables.min.js"></script>
    <script src="./js/dataTables.responsive.min.js"></script>
    <script src="./js/responsive.bootstrap.min.js"></script>
    <script src="./js/dataTables.bootstrap.min.js"></script>
    <script src="./js/moment-with-locales.min.js"></script>
    <link rel="stylesheet" type="text/css" href="./css/animate.css">
    <link rel="stylesheet" type="text/css" href="./css/dreamscape.css">
    <link rel="stylesheet" type="text/css" href="./css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="./css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="./css/responsive.bootstrap.min.css">
    <link rel="icon" href="./images/weather-icon.png">
</head>

<body>

    {{> header }}

    <div id="main-content" class="container main-content text-center quicksand">
        <h3 class="big-title">Weather</h3>
        <hr class="blue-rule">
        <h1 class="dev-title" id="loader">Please enter a city, state, zip code or street address to see the forecast for
            that location.</h1>
        <h1 class="dev-title" id="city"></h1><br>
        <p class="dev-paragraph" id="forecast"></p>
        <p class="error-text" id="error"></p>
        <form>
            <input type="text" name="search" id="search" class="search" placeholder="Location">
            <div class="button-bar">
                <input id="generate-button" class="btn btn-square btn-sm btn-ghost-green" type="submit"
                    value="Search" />
            </div>
        </form>
    </div>

    {{> footer }}
    <script src="./js/client.js"></script>
    <script src="./js/utils.js"></script>

</body>

</html>